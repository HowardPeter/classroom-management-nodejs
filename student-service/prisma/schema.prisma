generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  student_id      String    @id @default(uuid())
  full_name       String
  date_of_birth   DateTime?
  gender          String?
  phone           String?   @unique
  email           String?   @unique
  address         String?
  enrollment_date DateTime? @default(now())
}