generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  teacher_id   String    @id @default(uuid())
  full_name    String
  email        String?   @unique
  phone        String?   @unique
  expertise    String?
  avatar_url   String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
}